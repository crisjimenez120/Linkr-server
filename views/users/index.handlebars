<div class="row">
  <div class="col-xs-6 col-xs-offset-3">


    <form action="/users" method="post" >
      <textarea name="first" class="form-control" placeholder="Enter your first name: " rows="1"></textarea>
      <textarea name="last" class="form-control" placeholder="Enter your last name: " rows="1"></textarea>
      <textarea name="day" class="form-control" placeholder="Enter your first name: " rows="1"></textarea>
      <textarea name="event_start" class="form-control" placeholder="Enter your last name: " rows="1"></textarea>
      <textarea name="event_end" class="form-control" placeholder="Enter your first name: " rows="1"></textarea>
      <button type="submit" class="btn btn-primary pull-right">Confirm</button>
    </form>

